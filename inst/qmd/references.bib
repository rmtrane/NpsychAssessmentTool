@Article{strickerMayoNormativeStudies2021,
  title = {Mayo {{Normative Studies}}: {{Regression-Based Normative Data}} for the {{Auditory Verbal Learning Test}} for {{Ages}} 30–91 {{Years}} and the {{Importance}} of {{Adjusting}} for {{Sex}}},
