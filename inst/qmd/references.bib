  author = {Nikki H. Stricker and Teresa J. Christianson and Emily S. Lundt and Eva C. Alden and Mary M. Machulda and Julie A. Fields and Walter K. Kremers and Clifford R. Jack Jr and David S. Knopman and Michelle M. Mielke and Ronald C. Petersen},
  date = {2021-03},
  journaltitle = {Journal of the International Neuropsychological Society},
  volume = {27},
  number = {3},
